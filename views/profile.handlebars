<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{name}} !</h2>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">   
        <h3>Make a New Post</h3>
        <form class="form new-post-form">
            <div class="form-group">
                <div class="input-group input-group-lg">
                    <span class="input-group-text" id="post-title-label">Post Title</span>
                    <input type="text" class="form-control" id="post-title" name="post-title">
                </div>
                <div class="input-group input-group-lg">
                    <span class="input-group-text" id="post-body-label">Post Body</span>
                    <input type="text" class="form-control" id="post-body" name="post-body">
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit Post</button>
        </form>
    </div>

    {{#if posts.length}}
    <div class="col-lg-6">
        <h3>Your Posts:</h3>

        {{#each posts as |post|}}
        <div class="row mb-2 post-list">
            <div class="row mb-4">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">{{post.title}}</h5>
                        <p class="card-text">{{post.body}}</p>
                        <p class="card-text"><small class="text-body-secondary">{{post.time_created}}</small></p>
                    </div>
                    <button class="btn btn-sm btn-danger post-delete" data-id="{{post.id}}">Delete</button></div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}

</div>

<script src="./js/profile.js"></script>