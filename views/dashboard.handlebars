<div class="container-md">
    <div class="pt-4 row">
        <div class="col-auto">
            <h2>Welcome, {{name}} !</h2>
        </div>
    </div>

    <div class="py-4 row">
        <div class="col-lg-6 px-5">   
            <h3>Make a New Post</h3>
            <form class="form new-post-form">
                <div class="mb-3">
                    <div class="mb-3">
                        <label class="form-label" id="post-title-label">Post Title</label>
                        <input type="text" class="form-control" id="post-title"  name="post-title"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" id="post-body-label">Post Body</label>
                        <input type="text" class="form-control" id="post-body" style="height: 200px;" name="post-body"/>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit Post</button>
            </form>
        </div>

        {{#if posts.length}}
        <div class="pt-4 col-lg-6">
            <h3>Your Posts:</h3>

            {{#each posts as |post|}}
            <div class="py-3 row mb-2 post-list">
                <div class="row mb-4">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">{{post.title}}</h5>
                            <p class="card-text">{{post.body}}</p>
                            <p class="card-text"><small class="text-body-secondary">{{post.time_created}}</small></p>
                        </div>
                        <button class="btn btn-sm btn-danger post-delete" data-id="{{post.id}}">Delete</button></div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/if}}

    </div>
</div>
<script src="./js/dashboard.js"></script>